- unless current_page.data.hero.nil?
  .hero
    .container
      .content
        %h1.title
          = current_page.data.hero_title

        %h2.subtitle
          = current_page.data.hero_subtitle

        = current_page.data.getting_started_button

        - if current_page.data.social == true
          .social
            = yield_content :social_links

      .animation

      .display
        %img{src: "/images/elements/soldier.svg"}/

  .hero-black
    .triangles
      .triangle-left-black
      .triangle-right-black
    .clear

    .hero-black-container
      .container
        = yield_content :black_top_title

    .triangles
      .triangle-left-grey
      .triangle-right-grey
    .clear